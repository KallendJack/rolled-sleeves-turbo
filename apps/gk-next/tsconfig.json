{
    "extends": "tsconfig/nextjs.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "components/*": ["src/app/components/*"],
            "utils/*": ["src/utils/*"],
            "types/*": ["src/types/*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
    "exclude": ["node_modules"]
}
